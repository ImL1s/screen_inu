{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Screen Inu",
  "version": "0.1.0",
  "identifier": "com.iml1s.screeninu",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Screen Inu",
        "width": 480,
        "height": 640,
        "decorations": true,
        "transparent": false,
        "shadow": true,
        "resizable": true,
        "center": true,
        "minWidth": 400,
        "minHeight": 500
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/ImL1s/screen_inu/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE0ODg3NzgwMjJCRjJGNjYKUldSbUw3OGlnSGVJRkVnNXdVcUxONE0xSXg4d0tZb2YvQnpBVGxGalJ4Wm03aGJZNFpGdUdCT3cK"
    }
  }
}